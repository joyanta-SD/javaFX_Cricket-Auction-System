<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="900.0" stylesheets="@style1.css" xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClubAddController">

    <!-- Background image -->
    <ImageView fitHeight="600" fitWidth="900" preserveRatio="false">
        <image>
            <Image url="@images/image2.png"/>
        </image>
    </ImageView>


    <!-- Foreground layout -->
    <BorderPane>

        <top>
            <!-- Back Button in the top left corner -->
            <Button fx:id="backButton" layoutX="30" layoutY="30" onAction="#goToAdminDashboard"
                    style="-fx-background-color: transparent;" styleClass="logout-button">
                <graphic>
                    <ImageView fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true">
                        <Image url="@images/backicon.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </top>

        <center>
            <AnchorPane>
                <children>
                    <Label layoutX="267.0" layoutY="82.0" text="Club Name: " textFill="#aeded1">
                        <font>
                            <Font name="Arial Bold" size="20.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="clubNameField" layoutX="383.0" layoutY="77.0" prefWidth="250"
                               promptText="New club name" styleClass="input-field"/>


                    <Label layoutX="267.0" layoutY="132.0" text="Short Form: " textFill="#aeded1">
                        <font>
                            <Font name="Arial Bold" size="20.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="shortFormField" layoutX="383.0" layoutY="127.0" prefHeight="35.0"
                               prefWidth="250.0" promptText="Enter short form of club name" styleClass="input-field"/>


                    <Label layoutX="267.0" layoutY="182.0" text="Username: " textFill="#aeded1">
                        <font>
                            <Font name="Arial Bold" size="20.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="userNameField" layoutX="383.0" layoutY="177.0" prefWidth="250"
                               promptText="New username" styleClass="input-field"/>


                    <Label layoutX="267.0" layoutY="232.0" text="Password: " textFill="#aeded1">
                        <font>
                            <Font name="Arial Bold" size="20.0"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" layoutX="383.0" layoutY="227.0" prefWidth="250"
                                   promptText="New club password" styleClass="input-field"/>


                    <Label layoutX="267.0" layoutY="282.0" text="Manager: " textFill="#aeded1">
                        <font>
                            <Font name="Arial Bold" size="20.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="managerNameField" layoutX="383.0" layoutY="277.0" prefWidth="250"
                               promptText="Enter manager name" styleClass="input-field"/>


                    <Label layoutX="267.0" layoutY="332.0" text="Budget: " textFill="#aeded1">
                        <font>
                            <Font name="Arial Bold" size="20.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="budgetField" layoutX="383.0" layoutY="327.0" prefWidth="250"
                               promptText="Enter club budget" styleClass="input-field"/>


                    <Label layoutX="267.0" layoutY="382.0" text="Trophies: " textFill="#aeded1">
                        <font>
                            <Font name="Arial Bold" size="20.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="trophiesField" layoutX="383.0" layoutY="377.0" prefWidth="250"
                               promptText="Enter total trophies won" styleClass="input-field"/>

                </children>
            </AnchorPane>
        </center>
        <bottom>
            <Button onAction="#addClub" prefWidth="150" styleClass="sidebar-button" text="Add Club"
                    BorderPane.alignment="CENTER"/>
        </bottom>
    </BorderPane>
</StackPane>
